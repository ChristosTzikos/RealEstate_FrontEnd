<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tes_nav"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.real_estate.FirstFragment"
        android:label="first"
        tools:layout="@layout/fragment_first" >
        <action

            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment"

            />
        <action
            android:id="@+id/action_firstFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.real_estate.SecondFragment"
        android:label="second"
        tools:layout="@layout/fragment_second" >


        <argument
            android:name="buyOrRent"
            app:argType="string" />

        <argument
            android:name="city"
            app:argType="string" />

        <argument
            android:name="minRent"
            app:argType="string" />

        <argument
            android:name="maxRent"
            app:argType="string" />

        <argument
            android:name="buyOrrent2"
            app:argType="string" />

        <argument
            android:name="city2"
            app:argType="string" />

        <argument
            android:name="minRent2"
            app:argType="string" />

        <argument
            android:name="maxRent2"
            app:argType="string" />


        <action
            android:id="@+id/action_secondFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_secondFragment_to_filterFragment"
            app:destination="@id/filterFragment" />


<!--        <action-->
<!--            android:id="@+id/action_secondFragment_to_detailFragment"-->
<!--            app:destination="@id/detailFragment" />-->

        <!--        <action-->
        <!--            android:id="@+id/action_secondFragment_to_firstFragment"-->
        <!--            app:destination="@id/firstFragment" />-->
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.real_estate.FilterFragment"
        android:label="filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_secondFragment4"
            app:destination="@id/secondFragment"
            app:popUpTo="@id/secondFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.real_estate.DetailFragment"
        android:label="detail"
        tools:layout="@layout/fragment_detail" >


        <argument
            android:name="name"
            app:argType="string"/>

        <argument
            android:name="id"
            app:argType="string"/>

        <argument
            android:name="region"
            app:argType="string"/>

        <argument
            android:name="area"
            app:argType="string"/>

        <argument
            android:name="price"
            app:argType="string"/>
        <argument
            android:name="photo"
            app:argType="string"/>



    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.real_estate.LoginFragment"
        android:label="login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_loginFragment_to_firstFragment"
            app:destination="@id/firstFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/firstFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.real_estate.RegisterFragment"
        android:label="register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
